{
  "name": "send-to-vrc",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:frontend": "vite",
    "tauri": "tauri",
    "build": "npm run generate:thirdparty && tauri build",
    "build:frontend": "tsc && vite build",
    "generate:thirdparty": "npm run generate:thirdparty:backend && npm run generate:thirdparty:frontend",
    "generate:thirdparty:backend": "cd src-tauri && cargo about generate -c misc/about.toml misc/about.hbs -o resources/THIRDPARTY.backend",
    "generate:thirdparty:frontend": "npx generate-license-file --input package.json --output src-tauri/resources/THIRDPARTY.frontend --overwrite",
    "check": "npm run check:frontend && npm run check:backend",
    "check:frontend": "prettier --check . && tsc --noEmit",
    "check:backend": "cd src-tauri && cargo fmt --check && cargo clippy",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "prettier --write .",
    "format:backend": "cd src-tauri && cargo fmt",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky && node scripts/prepare.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.0",
    "@tauri-apps/plugin-dialog": "^2.4.0",
    "@tauri-apps/plugin-log": "^2.7.0",
    "@tauri-apps/plugin-opener": "^2.5.0",
    "98.css": "^0.1.21",
    "jotai": "^2.14.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "swr": "^2.3.6",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@emotion/babel-plugin": "^11.13.5",
    "@storybook/addon-a11y": "^9.1.6",
    "@storybook/addon-docs": "^9.1.6",
    "@storybook/addon-onboarding": "^9.1.6",
    "@storybook/addon-vitest": "^9.1.6",
    "@storybook/react-vite": "^9.1.6",
    "@tauri-apps/cli": "^2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "generate-license-file": "^4.1.0",
    "husky": "^9.1.7",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.92.1",
    "storybook": "^9.1.6",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^3.2.4"
  }
}
